{{>header}}
<div>
{{>admin.navbar}}
</div>
<div>
  {{#if user}}
<div class="container">
<form action="/admin/user/edit" method="POST">
  <p>Форма редактирования</p>
    <hr>
      <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input type="text" class="form-control" name="firstname" placeholder="Имя" required="required" value="{{user.firstname}}">
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input type="text" class="form-control" name="lastname" placeholder="Фамилия" required="required" value="{{user.lastname}}">
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input type="text" class="form-control" name="patronymic" placeholder="Отчество" required="required" value="{{user.patronymic}}">
      </div>
      <p>Группа</p>
       <select name="groupid" class="form-select" aria-label="Default select example">
         <option value="{{this.Group.id}}" selected="selected">{{user.Group.name}}</option>
        {{#each groups}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
        </div>
        <div class="form-group">
        <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
        <input type="text" class="form-control" name="telegram" placeholder="Ник в телеграм" required="required" value="{{user.telegram}}">
      </div>
        </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <input type="text" class="form-control" name="hhcv" placeholder="Ссылка на резюме на hh.ru" required="required" value="{{user.hhcv}}">
      </div>
        </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-lock"></i>
          <i class="fa fa-check"></i>
        </span>
        <input type="text" class="form-control" name="github" placeholder="Ссылка на github" required="required" value="{{user.github}}">
      </div>
      </div>
      <div class="mb-3">
          <label for="formFile" class="form-label">Прикрепи резюме</label>
          <input name="pdfcv" class="form-control" type="file" value="{{user.pdfcv}}" id="formFile">
      </div>
      <div class="mb-3">
          <label for="formFile" class="form-label">Прикрепи фото</label>
          <input name="userphoto" class="form-control" type="file" value="{{user.userphoto}}" id="formFile">
      </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
</div>
{{/if}}
</div>
